{
	"name": "worldstore",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check .",
		"docker:build": "docker build -t $DOCKER_IMAGE --platform=linux/amd64 . ",
		"docker:push": "docker push $DOCKER_IMAGE",
		"gcloud:deploy": "gcloud run deploy $SERVICE_NAME --image=$DOCKER_IMAGE --region=$REGION"
	},
	"devDependencies": {
		"@iconify-json/heroicons": "^1.2.3",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.17",
		"@types/autosize": "^4.0.3",
		"@types/luxon": "^3.7.1",
		"@types/node": "^25.0.3",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.45.6",
		"svelte-check": "^4.3.4",
		"tailwind-scrollbar": "^4.0.2",
		"tailwindcss": "^4.1.17",
		"typescript": "^5.9.3",
		"unplugin-icons": "^22.5.0",
		"vite": "^7.2.6"
	},
	"dependencies": {
		"@google-cloud/storage": "^7.18.0",
		"autosize": "^6.0.1",
		"decode-formdata": "^0.9.0",
		"luxon": "^3.7.2",
		"melt": "^0.44.0",
		"nanoid": "^5.1.6",
		"valibot": "^1.2.0",
		"worldformat": "github:worldformat/worldformat"
	}
}
